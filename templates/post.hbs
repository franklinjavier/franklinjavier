{{> header}}

  <article class="post">

    {{> tags}}

    <h1>{{ title }}</h1>
    <time datetime="{{ dateFormat date }}">{{ dateFormat date }}</time>

    <div class="post-body">
      {{{contents}}}
    </div>

    {{> share}}

    <nav class="pagination">
      {{#if next.path}}
      <a href="/{{next.path}}" class="btn -large prev" title="{{next.title}} (J)">Anterior</a>
      {{/if}}

      {{#if previous}}
      <a href="/{{previous.path}}" class="btn -large next" title="{{previous.title}} (K)">Pr√≥ximo</a>
      {{/if}}
    </nav>

    {{debug previous.title}}

  </article>

{{> footer}}
