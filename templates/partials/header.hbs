<header class="header">

  <div class="gradient"></div>

  {{#if post}}
  <div class="info content">
    <div class="avatar">
      <a href="/">
        <img src="/img/avatar2.jpg" alt="{{ metadata.name }}">
      </a>
    </div>
  </div>
  {{else}}
  <div class="info -full content">
    <div class="avatar">
      <a href="/">
        <img src="/img/avatar2.jpg" alt="{{ metadata.name }}">
      </a>
    </div>
    <div class="container">
      <h1 class="title">
        <a href="{{ metadata.url }}">{{ metadata.name }}</a>
      </h1>
      <h2 class="description">
        <a href="http://stackshare.io/franklinjavier" target="_blank" title="See my full stack">Front-end</a> developer
      </h2>
      <div class="location">
       <small>SÃ£o Paulo, Brasil</small>
      </div>

      <div class="about">
        <a href="/pages/about/">Sobre</a>
      </div>

    </div>
  </div>
  {{/if}}
</header>
