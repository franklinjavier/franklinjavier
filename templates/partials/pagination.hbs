{{!-- List of posts --}}
{{#each pagination.files}}
<article class="home-post">

  <header>
    <h2>
      <a href="/{{path}}/">{{title}}</a>
    </h2>
    <time datetime="{{ dateFormat this.date }}"><small>{{ dateFormat this.date }}</small></time>
    {{> tags}}
  </header>

  <section>
    <div class="excerpt">{{{ excerpt }}}</div>
  </section>

</article>
{{/each}}

{{!-- Pagination --}}
<nav class="pagination">
    {{#if pagination.previous}}
    <a href="/{{pagination.previous.path}}" class="btn -large prev">Anterior</a>
    {{/if}}

    {{#if pagination.next}}
    <a href="/{{pagination.next.path}}" class="btn -large next">Pr√≥xima</a>
    {{/if}}
</nav>
