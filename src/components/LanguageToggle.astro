<script>
  // Keyboard shortcut: Press 'L' to toggle language
  document.addEventListener('keydown', (e) => {
    // Only toggle if user is not typing in an input/textarea
    if (
      e.key === 'l' &&
      !e.metaKey &&
      !e.ctrlKey &&
      !e.altKey &&
      document.activeElement?.tagName !== 'INPUT' &&
      document.activeElement?.tagName !== 'TEXTAREA'
    ) {
      const languageToggle = document.getElementById('language-toggle') as HTMLAnchorElement;
      if (languageToggle) {
        window.location.href = languageToggle.href;
      }
    }
  });
</script>
